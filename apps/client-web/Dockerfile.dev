FROM node:22-alpine

WORKDIR /app

# Install pnpm (without corepack if possible, or use corepack)
RUN corepack enable && corepack prepare pnpm@latest --activate

# Copy workspace config
COPY package.json pnpm-workspace.yaml pnpm-lock.yaml ./
COPY tsconfig.base.json tsconfig.json ./

# Copy package manifests
COPY packages/shared-protocol/package.json packages/shared-protocol/
COPY packages/shared-core/package.json packages/shared-core/
COPY apps/client-web/package.json apps/client-web/

# Install dependencies
RUN pnpm install --frozen-lockfile

# Copy source
COPY packages/ packages/
COPY apps/client-web/ apps/client-web/

# Expose Vite port
EXPOSE 5173

# Run dev server
CMD ["pnpm", "--filter", "@dexdraw/client-web", "dev", "--host"]
